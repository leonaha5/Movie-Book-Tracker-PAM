<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/layoutTytul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*tytul*"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/layoutRecenzja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="*recenzja *zxdcfcvgbhnjmkfcvgbhnjvfbghtcfvgyhbunijmctfvgybhunijtcfvgybhutcvfgbuhynzxrcdtfvgbhunijmr*" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/layoutOcena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocena: *ocena*/10" />
    </LinearLayout>

</LinearLayout>